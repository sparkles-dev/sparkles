{
  "extends": [
    "config:base",
    "monorepo:angular",
    "monorepo:commitlint",
    "monorepo:ngrx",
    "monorepo:nrwl",
    "schedule:nonOfficeHours",
    ":maintainLockFilesWeekly",
    ":label(renovate)",
    ":pinDigestsDisabled",
    ":semanticCommitScopeDisabled"
  ],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "semanticCommitType": "build"
    },
    {
      "depTypeList": ["dependencies"],
      "semanticCommitType": "fix"
    }
  ],
  "semanticCommitType": "build",
  "pinVersions": false
}
